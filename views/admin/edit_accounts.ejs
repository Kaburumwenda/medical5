<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Edit Account</h2>
<a href="/admin/accounts" class="btn btn-primary">Back to Accounts</a>
<br><br>

<form method="post" action="/admin/accounts/edit-account/<%= id %>" enctype="multipart/form-data">
    
    <div class="form-group">
        <label for="">name</label>
        <input type="text" class="form-control" name="title" value="<%= name %>" placeholder="Title">
    </div>
    
    <div class="form-group">
        <label for="">username</label>
        <textarea name="username" class="form-control" cols="30" rows="10" placeholder="Description"><%= username %></textarea>
    </div>
    
   
    
    <div class="form-group">
        <label for="">Email</label>
        <input type="text" class="form-control" name="email" value="<%= email %>" placeholder="Baby temperature">
    </div>

    <div class="form-group">
        <label for="">Admin</label>
        <input type="text" class="form-control" name="admin" value="<%= admin %>" placeholder=" Baby humidity">
    </div>

    <div class="form-group">
        <label for="">Doctor</label>
        <input type="text" class="form-control" name="doctor" value="<%= doctor %>" placeholder="Baby Heart Rate">
    </div>
    

    
    
    
   
    <button class="btn btn-default btn-primary">Submit to Server</button>
</form>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.1.1/basic.css"/>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.1.1/dropzone.css"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.1.1/dropzone.js"></script>
<script>
    
    // Preview image
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }
            
            reader.readAsDataURL(input.files[0]);
        }
    }
    
    $("#img").change(function() {
        readURL(this);
    });
    
    // Dropzone
    Dropzone.options.dropzoneForm = {
        acceptedFiles: "image/*",
        init: function() {
            this.on("queuecomplete", function(file) {
               setTimeout(function() {
                location.reload()
                }, 1000); 
            });
        }
    }
    
</script>

